FROM alpine:3.19

RUN apk update && apk add --no-cache \
    php81 php81-fpm php81-mysqli php81-opcache php81-gd php81-mbstring php81-curl php81-phar \
    curl unzip shadow mariadb-client iputils bash

# Cr√©er l'utilisateur pour PHP-FPM
RUN addgroup -S www && adduser -S -G www www

RUN ln -s /usr/bin/php81 /usr/bin/php
RUN ln -s /usr/sbin/php-fpm81 /usr/bin/php-fpm

RUN curl -o /usr/local/bin/wp https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar \
    && chmod +x /usr/local/bin/wp

RUN mkdir -p /var/www/html

COPY tools/ /tools/

RUN chmod +x /tools/install_wordpress.sh

COPY conf/www.conf /etc/php81/php-fpm.d/www.conf
COPY conf/php.ini /etc/php81/php.ini

EXPOSE 9000

CMD ["/tools/install_wordpress.sh"]