FROM alpine:3.19

RUN apk update && apk add --no-cache \
    php81 php81-fpm php81-mysqli php81-opcache php81-gd php81-mbstring php81-curl \
    curl unzip shadow mariadb-client

RUN mkdir -p /var/www/html

COPY tools/ /tools/

RUN chmod +x /tools/install_wordpress.sh

COPY conf/www.conf /etc/php81/php-fpm.d/www.conf

EXPOSE 9000

CMD ["/tools/install_wordpress.sh"]